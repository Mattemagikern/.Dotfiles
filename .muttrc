source "gpg -d ~/.mutt/passwords.gpg |"

set folder              = "imaps://imap.gmail.com"
set postponed           = "+[Gmail]/Drafts"
set header_cache        = ~/.mutt/victorparmar/headers
set message_cachedir    = ~/.mutt/victorparmar/bodies
set certificate_file    = ~/.mutt/certificates

set realname = "Måns Ansgariusson"
set from = "mattemagikern@gmail.com"
set use_from = yes
set envelope_from = yes

set smtp_url = "smtp://mattemagikern@gmail.com@smtp.gmail.com:587/"
set smtp_pass = "Dyrk3344"
set imap_user = "mattemagikern@gmail.com"
set imap_pass = "Dyrk3344"
set imap_keepalive      = 30
unset imap_passive                             # allow mutt to open new imap connection automatically

set spoolfile = "+INBOX"
set ssl_starttls = yes
set ssl_force_tls = yes
set move	= no

# G to get mail
bind index G imap-fetch-mail
set editor = "nvim"
set charset = "utf-8"
set record = ''
set timeout             = 60                   # idle time before scanning
set mail_check          = 60                   # minimum time between scans

set sidebar_visible
set sidebar_format = "%B%?F? [%F]?%* %?N?%N/?%S"
set mail_check_stats
bind index,pager \CP sidebar-prev
# Ctrl-Shift-P – Previous Mailbox
bind index,pager \CN sidebar-next
# Ctrl-Shift-N – Next Mailbox
bind index,pager \CO sidebar-open
# Ctrl-Shift-O – Open Highlighted Mailbox
