!!System settings
!! Appearance
xft.antialias:	1
xft.autohint:	1
xft.hinting: 1
rxvt.termName: rxvt-unicode-256color
*font:    xft:Hack Nerd Font:autohint=true:size=18
*boldFont:xft:Hack Nerd Font:autohint=true:bold:size=18
*italicFont:xft:Hack Nerd Font:autohint=true:italic:size=18
*boldItalicFont:xft:Hack Nerd Font:autohint=true:bold:italic:size=18
URxvt*scrollBar: false
URxvt*cursorUnderline: true
URxvt*saveLines: 1000
URxvt.letterSpace: 1

URxvt*transparent: true
URxvt*shading: 30
URxvt*foreground: #FFFFFF
URxvt*cursorColor:  #f6ae2d
URxvt*cursorColor2: #f6ae2d
! black
URxvt*color0  : #000000
URxvt*color8  : #000000
! red
URxvt*color1  : #CC0000
URxvt*color9  : #EF2929
! green
URxvt*color2  : #4E9A06
URxvt*color10 : #8AE234
! yellow
URxvt*color3  : #C4A000
URxvt*color11 : #FCE94F
! blue
URxvt*color4  : #3465A4
URxvt*color12 : #729FCF
! magenta
URxvt*color5  : #75507B
URxvt*color13 : #AD7FA8
! cyan
URxvt*color6  : #06989A
URxvt*color14 : #34E2E2
! white
URxvt*color7  : #FFFFFF
URxvt*color15 : #FFFFFF

rofi.lines: 5
rofi.eh: 2
rofi.width: 100
rofi.padding: 200
rofi.fullscreen: true
rofi.bw: 0
rofi.separator-style: none
rofi.hide-scrollbar: true

!                  'background', 'border', 'separator'
rofi.color-window: argb:c82d303b, #7c8389, #1d1f21
! State:           'bg',     'fg',     'bgalt',  'hlbg',   'hlfg'
rofi.color-normal: argb:031d1f21, #f3f4f5, argb:031d1f21, argb:031d1f21, #9575cd 
rofi.font: System San Francisco Display 18
rofi.show-icons: true
