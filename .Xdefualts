!!System settings
!! Appearance
xft.antialias:	1
xft.autohint:	1
xft.hinting: 1
URxvt.termName: rxvt-unicode-256color
*font:    xft:Hack Nerd Font:autohint=true:size=12
*boldFont:xft:Hack Nerd Font:autohint=true:bold:size=18
*italicFont:xft:Hack Nerd Font:autohint=true:italic:size=18
*boldItalicFont:xft:Hack Nerd Font:autohint=true:bold:italic:size=18
URxvt*scrollBar: false
URxvt*cursorUnderline: true
URxvt*saveLines: 1000
URxvt.letterSpace: 1

rxvt*transparent: true
rxvt*shading: 50
rxvt*background: 00F5/0093/002D
rxvt*foreground: #f6ae2d
rxvt*cursorColor:  #f6ae2d
rxvt*cursorColor2: #f6ae2d
! black
rxvt*color0  : #000000
rxvt*color8  : #000000
! red
rxvt*color1  : #CC0000
rxvt*color9  : #EF2929
! green
rxvt*color2  : #4E9A06
rxvt*color10 : #8AE234
! yellow
rxvt*color3  : #C4A000
rxvt*color11 : #FCE94F
! blue
rxvt*color4  : #3465A4
rxvt*color12 : #729FCF
! magenta
rxvt*color5  : #75507B
rxvt*color13 : #AD7FA8
! cyan
rxvt*color6  : #06989A
rxvt*color14 : #34E2E2
! white
rxvt*color7  : #FFFFFF
rxvt*color15 : #FFFFFF

rofi.lines: 5
rofi.eh: 2
rofi.width: 100
rofi.padding: 200
rofi.fullscreen: true
rofi.bw: 0
rofi.separator-style: none
rofi.hide-scrollbar: true

!                  'background', 'border', 'separator'
rofi.color-window: argb:c82d303b, #7c8389, #1d1f21
! State:           'bg',     'fg',     'bgalt',  'hlbg',   'hlfg'
rofi.color-normal: argb:031d1f21, #f3f4f5, argb:031d1f21, argb:031d1f21, #9575cd 
rofi.font: System San Francisco Display 18
rofi.show-icons: true
