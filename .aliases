alias scu='cd ~/Documents/ubiquitous-pancake/SCU/'

lightup (){
	arr=("0;31" "1;36" "0;34" "0;36" "0;37" "0;32")
	reset='\e[0m'
	res=""
	indx=0
	for i in "$@"; do 
		color=$(printf %s%s%s '\e[' ${arr[indx % ${#arr[@]}]} 'm')
			res=$res"sed 's/$i/$(printf $color)$i$(printf $reset)/g' | "
			((indx++))
		done 
	eval $res less -r
}

